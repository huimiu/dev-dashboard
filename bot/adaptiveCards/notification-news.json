{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "Image",
            "url": "${urlToImage}",
            "altText": "${title}"
        },
        {
            "type": "TextBlock",
            "text": "${title}",
            "size": "Large",
            "weight": "Bolder",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "**AI Summary**: ${description}",
            "isSubtle": true,
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "View Details",
            "url": "${url}"
        }
    ]
}
